extends layout

block content
    // Header
    header#header
        h1 Pitchblack
        p
          | We make cool
          a(href="/ani", style="margin: 0 5px; color: #1cb495 !important;") stuff
          | simply
          br
          | because it's cool and we want to.

    // Signup Form
    form#signup-form(method='post', action='#')
        input#email(type='email', name='email', placeholder='Email Address')
        input(type='submit', value='Let me know about the cool stuff')

    // Footer
    footer#footer
        ul.icons
            li
                a.icon.fa-twitter(href='#')
                    span.label Twitter
            li
                a.icon.fa-instagram(href='#')
                    span.label Instagram
            li
                a.icon.fa-github(href='#')
                    span.label GitHub
            li
                a.icon.fa-envelope-o(href='#')
                    span.label Email
        ul.copyright
            li Â© Pitchblack.
            li
                | Ani

block footerScripts
    script(type='text/javascript', src='/javascripts/jquery.min.js')
    script(type='text/javascript', src='/javascripts/main.js')
